{
  "name": "npm-outdated",
  "displayName": "npm Outdated",
  "description": "Displays a diagnostic message in package.json files for packages with newer versions available.",
  "version": "0.0.0-semantically-released",
  "publisher": "mskelton",
  "author": "Mark Skelton",
  "repository": {
    "type": "git",
    "url": "https://github.com/mskelton/vscode-npm-outdated.git"
  },
  "bugs": {
    "url": "https://github.com/mskelton/vscode-npm-outdated/issues"
  },
  "homepage": "https://github.com/mskelton/vscode-npm-outdated#readme",
  "license": "ISC",
  "keywords": [
    "npm",
    "vscode-extension",
    "vscode"
  ],
  "eslintConfig": {
    "extends": [
      "@mskelton",
      "@mskelton/eslint-config/typescript"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc",
    "watch": "tsc -watch",
    "lint": "eslint src --ext ts",
    "format:check": "prettier --check .",
    "format": "prettier --write ."
  },
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "devDependencies": {
    "@mskelton/eslint-config": "^7.1.0",
    "@types/node": "^18.11.15",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "prettier": "^2.8.1",
    "semantic-release-vsce": "^5.5.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "semver": "^7.3.8"
  },
  "extensionDependencies": [
    "vscode.npm"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "npm Outdated",
      "properties": {
        "npm-outdated.level": {
          "order": 1000,
          "type": "string",
          "default": "patch",
          "enum": [
            "major",
            "minor",
            "patch"
          ],
          "markdownDescription": "Minimum semver bump required for a package to display as outdated. See npm's [Semver docs](https://docs.npmjs.com/cli/v6/using-npm/semver) for more details."
        },
        "npm-outdated.majorUpdateProtection": {
          "order": 2000,
          "type": "boolean",
          "default": true,
          "markdownDescription": "Avoid suggesting that a package be upgraded to a `major` version directly. The suggestion will only happen if the user-defined version is the latest `minor` version available."
        },
        "npm-outdated.cacheLifetime": {
          "order": 9000,
          "type": "number",
          "default": 60,
          "minimum": 1,
          "description": "Time in minutes in which the versions of packages already analyzed will be kept internally. Performance improvement."
        },
        "npm-outdated.parallelProcessesLimit": {
          "order": 9100,
          "type": "number",
          "default": 10,
          "minimum": 0,
          "description": "Defines how much packages can be analyzed together. A high value processes faster but consumes much more CPU. Set 0 to be unlimited (use with moderation)."
        }
      }
    }
  }
}
