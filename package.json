{
  "name": "npm-outdated",
  "displayName": "npm Outdated",
  "description": "%npm-outdated.description%",
  "version": "0.0.0-semantically-released",
  "publisher": "mskelton",
  "author": "Mark Skelton",
  "l10n": "./locales",
  "repository": {
    "type": "git",
    "url": "https://github.com/mskelton/vscode-npm-outdated.git"
  },
  "bugs": {
    "url": "https://github.com/mskelton/vscode-npm-outdated/issues"
  },
  "homepage": "https://github.com/mskelton/vscode-npm-outdated#readme",
  "license": "ISC",
  "keywords": [
    "npm",
    "vscode-extension",
    "vscode"
  ],
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@mskelton",
      "@mskelton/eslint-config/typescript",
      "plugin:@typescript-eslint/strict",
      "plugin:promise/recommended",
      "plugin:jest/all"
    ],
    "rules": {
      "no-return-await": "warn",
      "curly": [
        "warn",
        "all"
      ],
      "@typescript-eslint/explicit-function-return-type": "warn",
      "jest/unbound-method": "off",
      "jest/prefer-expect-assertions": "off",
      "jest/prefer-spy-on": "off"
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "compile": "tsc",
    "watch": "tsc -watch",
    "lint": "eslint src --ext ts",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "devDependencies": {
    "@mskelton/eslint-config": "^7.1.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.16",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "esbuild": "^0.16.8",
    "eslint": "^8.30.0",
    "eslint-plugin-jest": "^27.1.7",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "semantic-release-vsce": "^5.5.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "semver": "^7.3.8"
  },
  "extensionDependencies": [
    "vscode.npm"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "npm Outdated",
      "properties": {
        "npm-outdated.level": {
          "order": 1000,
          "type": "string",
          "default": "patch",
          "enum": [
            "major",
            "minor",
            "patch"
          ],
          "markdownDescription": "%npm-outdated.configuration.level.description%"
        },
        "npm-outdated.majorUpdateProtection": {
          "order": 2000,
          "type": "boolean",
          "default": true,
          "markdownDescription": "%npm-outdated.configuration.majorUpdateProtection.description%"
        },
        "npm-outdated.decorations": {
          "order": 3000,
          "type": "boolean",
          "default": true,
          "markdownDescription": "%npm-outdated.configuration.decorations.description%"
        },
        "npm-outdated.cacheLifetime": {
          "order": 9000,
          "type": "number",
          "default": 60,
          "minimum": 1,
          "markdownDescription": "%npm-outdated.configuration.cacheLifetime.description%"
        },
        "npm-outdated.parallelProcessesLimit": {
          "order": 9100,
          "type": "number",
          "default": 10,
          "minimum": 0,
          "markdownDescription": "%npm-outdated.configuration.parallelProcessesLimit.description%"
        }
      }
    }
  }
}
